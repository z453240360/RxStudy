<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <com.tzj.lajiche.rxstudy.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/mBtn_test1"
            android:text="序号1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test2"
            android:text="序号2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test3"
            android:text="序号4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test4"
            android:text="序4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test5"
            android:text="序号5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test6"
            android:text="序号6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtn_test7"
            android:text="序号7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.tzj.lajiche.rxstudy.view.MyView
            android:layout_width="match_parent"
            android:layout_height="80dp"></com.tzj.lajiche.rxstudy.view.MyView>

        <com.tzj.lajiche.rxstudy.view.MagicCircle
            android:id="@+id/mCicle"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <EditText
            android:background="#80ff0000"
            android:gravity="center_horizontal"
            android:id="@+id/mEd_test"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>


</ScrollView>